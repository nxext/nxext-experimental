{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../../dist/out-tsc",
    "allowJs": true,
    "declaration": true,
    "types": ["node", "vite/client"]
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "jest.config.ts"],
  "include": [
    "**/*.ts",
    "src/plugins/angular-compiler/resolver.js",
    "src/plugins/angular-compiler/optimizer.js",
    "src/plugins/angular-compiler/index.js",
    "src/plugins/angular-compiler/compile.js"
  ]
}
